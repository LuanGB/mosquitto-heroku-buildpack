#Install Mosquitto
wget http://mosquitto.org/files/source/mosquitto-1.5.tar.gz
tar -xf mosquitto-1.5.tar.gz
cd mosquitto-1.5

make install

#Run Mosquitto
mkdir -p $HOME/mqtt/ws/http

cat > $1/mosquitto_ws.conf << EOF
listener 1883
protocol mqtt

http_dir $HOME/mqtt/ws/http
EOF

mosquitto -v -c $1/mosquitto_ws.conf &
